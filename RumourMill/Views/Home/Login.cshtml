﻿@model RumourMill.Models.Leader

@{
    ViewBag.Title = "Login";
}

@Html.ValidationSummary(true)
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        body {
            background: #2d343d !important;
        }
        #field-validation-error {
            color: red;
        }
    </style>
</head>
<body class="loginPage">
    <form action="Login" method="post" class="login">

        <h1 class="login-title">Login</h1>

        
            <input type="text" class="login-input" id="UserName" name="UserName" value="" placeholder="Username" autofocus>
        

            <input type="password" class="login-input" id="Password" name="Password" value="" placeholder="Password" autofocus>
       

        <label class="field-validation-error">@Html.DisplayFor(model => model.ErrorMessage)</label>
        <input type="submit" class="login-button" name="name" value="Login" />

    </form>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</body>
</html>

